{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "WINDOWS Generate Engine Build",
      "type": "shell",
      "command": "python ${workspaceFolder}/t_generate_engine_builder.py",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "WINDOWS Format Whole SRC with clang",
      "type": "shell",
      "command": "python ${workspaceFolder}/t_format_workspace.py",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "WINDOWS Generate Compilation Database",
      "type": "shell",
      "command": "python ${workspaceFolder}/t_generate_compilation_database.py",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build CatzEngineEditor Release DX11 X64",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-Command",
        "if (!(Test-Path ${workspaceFolder}/build)) { mkdir ${workspaceFolder}/build };",
        "cd ${workspaceFolder};",
        "cmake -S . -B build -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DCMAKE_CXX_STANDARD=17 -DCMAKE_BUILD_TYPE=Release_DX11 -DCMAKE_GENERATOR_PLATFORM=x64 -DUNICODE=1 -DSMAA_HLSL_4_1=1 -DDX11=1;",
        "cmake --build build --config Release_DX11 --parallel 4;",
        "if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE };"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "silent",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
